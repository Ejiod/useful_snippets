%macro merge_datasets;
    data merged_data;
        %do year = 2012 %to 2014;  /* Adjusted the loop to include 2014 */
            %do month = 1 %to 12;
                %let monthname = %sysfunc(monthname(&month. 01));
                %let monthname = %substr(&monthname., 1, 3);
                %let monthname = %lowcase(&monthname.);
                
                set temp.xxx&monthname.&year._;
            %end;
        %end;
    run;
%mend merge_datasets;

%merge_datasets;
