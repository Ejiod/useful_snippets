SELECT
  CASE
    WHEN date_column IS NULL OR UPPER(date_column) = 'N/A' OR UPPER(date_column) = 'NOT SENT' THEN 
      NULL -- Return NULL when the entry is 'Not Sent', 'N/A', or NULL
    WHEN POSITION('/' IN date_column) > 0 THEN -- Handles dates like '20/1/10/2021'
      (CAST((SUBSTRING(date_column FROM 1 FOR 2) || '-' || SUBSTRING(date_column FROM 4 FOR 2) || '-' || SUBSTRING(date_column FROM 7 FOR 4)) AS DATE FORMAT 'DD-MM-YYYY')) (FORMAT 'YYYY-MM-DD')(CHAR(10))
    WHEN POSITION(' ' IN date_column) = 3 THEN -- Handles dates like '13 December 2015'
      (CAST(date_column AS DATE FORMAT 'DD Month YYYY')) (FORMAT 'YYYY-MM-DD')(CHAR(10))
    WHEN POSITION(',' IN date_column) > 0 THEN -- Handles dates like 'Monday, October 15, 2015'
      (CAST((SUBSTR(date_column, POSITION(',' IN date_column)+2)) AS DATE FORMAT 'Month DD, YYYY')) (FORMAT 'YYYY-MM-DD')(CHAR(10))
    ELSE
      NULL -- if not recognizable date, return NULL
  END AS standardized_date
FROM xx_table
